// Main Stylesheet

// Box sizing partial styles
// Apply a natural box layout model to all elements

dark-bg = #414141

*,
*:before,
*:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

// Injects all bower_component files automatically
// bower:styl
// endbower

// Injects all import files automatically (ex. _mypartial)
// [injector]
// [endinjector]

.background
  background-image url(../images/mountain_sm.jpeg)

#filler
  height 1100px
  
.hidden
  display: none
  
.slide-right
  position: fixed
  width: 200px
  height: 200px
  background-color: red

.slide-left
  position fixed
  width 200px
  height 200px
  background-color blue
  left 1200px

section
  height: 600px;

.section
  min-height 400px
  background-color dark-bg

.iphone-front
  width 293px
  height 548px
  background-image url(../images/img_iphone_front.png)
  display inline-block
  
.iphone-back
  width 293px
  height 548px
  background-image url(../images/img_iphone_back.png)
  display inline-block

#phone-container, #android-container
  .iphone-back
    transition: transform .7s .7s
    transform translate3d(-40%, 0, 0)
  .iphone-front
    transition: transform .7s .7s
    transform translate3d(61.6%, 0, 0)
  p 
    display none
  &.open
    .iphone-back
      transform translate3d(0, 0, 0)
    .iphone-front
      transform translate3d(0, 0, 0)
    p
      position relative
      top -253px
      display inline-block
  

.yeogurt-info
  text-align center
  max-width 500px
  margin-left auto
  margin-right auto

.version
  font-size 14px
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  position absolute
  bottom 10px
  right 10px

.logo
  margin-top 15px

.links a
  color white
  margin-right 5px
  margin-top 20px
  border-radius 4px
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  background #ed7c6c
  display inline-block
  zoom 1
  line-height normal
  white-space nowrap
  vertical-align baseline
  text-align center
  cursor pointer
  font-size 100%
  padding .5em 1em
  text-decoration none



// Styling on warning for users on IE7 or below
.browsehappy
  text-align center
  margin 0
  background #fff8e2
  color #000
  padding 0.5em 0
